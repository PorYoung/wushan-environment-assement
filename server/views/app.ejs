<!DOCTYPE html>
<html lang="cn">
    <head>
        <title></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/static/css/login.css">
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
        <script src="/static/js/lib.js"></script>
        <script src="/static/js/router.js"></script>
        <script>
            const config = {
                user: null
            }
            qRouter.init()
            qRouter.on('/:user',function(req){
                //验证用户是否存在和登陆
                window._ajax({
                        url: '/api/permission',
                        data: {
                            username: req.params.user
                        },
                        success: function(res){
                            if(!!res && res == '1'){
                                config.user = req.params.user
                                var html = "<i class='fa fa-spinner fa-pulse fa-3x fa-fw'></i><span class='sr-only'>Loading...</span>"
                                var clearMyLoading = myLoading("Loading...",html)
                                window._ajax({
                                    url: '/'+config.user,
                                    data:{
                                        username: config.user
                                    },
                                    success: function(data){
                                        if(!!data && data != '-1'){
                                            var link = document.getElementsByTagName('link')
                                            for(var i = 0;i < link.length;i++){
                                                if(link[i].href.match(/\/login.css$/)){
                                                    link[i].parentNode.removeChild(link[i])
                                                    break
                                                }
                                            }
                                            _loadJs('/static/js/app.js')
                                            _loadCss('/static/css/app.css')
                                            document.body.innerHTML = data
                                            setTimeout(function () {
                                                clearMyLoading()
                                                qRouter.go('/'+config.user+'/all')
                                            },1200)
                                        }else{
                                            clearMyLoading()
                                            html = "<i class='fa fa-remove fa-4x fa-fw' style='color: #00EE00'></i><span class='sr-only'>Failed</span>"
                                            clearMyLoading = myLoading("Failed，请重新登陆",html)
                                            setTimeout(function () {
                                                clearMyLoading()
                                                window.location.href = '/'
                                            },1200)
                                        }
                                    }
                                })
                            }else{
                                window.location.href = '/'
                            }
                        }
                })
            })
        </script>
    </head>
    <body>
        <div class="background">
        </div>
        <div class="wrap">
            <div class="username">
                <i class="fa fa-user icon" aria-hidden="true"></i>
                <div class="user-select input">
                    <span class="user-current">选择单位</span>
                    <ul class="user-list">
                        <li class="option" data-value="DRC">发改委</li>
                        <li class="option" data-value="BLR">国土局</li>
                        <li class="option" data-value="FB">林业局</li>
                        <li class="option" data-value="WA">水务局</li>
                        <li class="option" data-value="EPB">环保局</li>
                        <li class="option" data-value="Manager">网站管理员</li>
                    </ul>
                </div>
            </div>
            <div class="password">
                <i class="fa fa-lock icon" aria-hidden="true"></i>
                <input type="password" name="password" class="input">
            </div>
            <!--div>
                验证码
            </div-->
            <div>
                <span class="login-btn">登陆</span>
            </div>
        </div>
        <script src="/static/js/login.js"></script>
    </body>
</html>